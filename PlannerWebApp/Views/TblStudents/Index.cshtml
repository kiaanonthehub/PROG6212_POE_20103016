@model IEnumerable<PlannerLibrary.DbModels.TblStudent>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@{ Layout = "_Layout";}
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StudentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentSurname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentEmail)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentSurname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentEmail)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.StudentNumber">Update</a> |
                    <a asp-action="Delete" asp-route-id="@item.StudentNumber">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
