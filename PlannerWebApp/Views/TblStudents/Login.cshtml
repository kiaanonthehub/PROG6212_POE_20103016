@model PlannerLibrary.Models.StudentLogin

@{
    ViewData["Title"] = "Login";
}

<head>
    <title>Bootstrap Hide Show Password</title>
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-show-password/1.0.3/bootstrap-show-password.min.js"></script>

    @*  Code Attribution
        Aurthor : Hardik Savani
        Topic   : Bootstrap - Show/Hide(toggle) Password input field using bootstrap-show-password.js PluginBootstrap
        Link    : https://www.itsolutionstuff.com/post/bootstrap-show-hidetoggle-password-input-field-using-bootstrap-show-passwordjs-pluginexample.htmlhttps://www.itsolutionstuff.com/post/bootstrap-show-hidetoggle-password-input-field-using-bootstrap-show-passwordjs-pluginexample.html
    *@
</head>

<h1>Login</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StudentNumber" class="control-label"></label>
                <input asp-for="StudentNumber" class="form-control" />
                <span asp-validation-for="StudentNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentHashPassword" class="control-label"></label>
                @*<input asp-for="StudentHashPassword" type="password" class="form-control" />*@
                  <input asp-for="StudentHashPassword" type="password" class="form-control" id="password" data-toggle="password"/>
                
                <div class="text-danger">
                    @ViewBag.InvalidDetails
                </div>    
                
            <span asp-validation-for="StudentHashPassword" class="text-danger"></span>
            </div>
                <script type="text/javascript">
                    $("#password").password('toggle');
                </script>

            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Signup">Don't have an account yet? Sign up</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
