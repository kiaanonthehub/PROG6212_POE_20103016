@model PlannerLibrary.Models.TrackStudy

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
@{ Layout = "_Layout";}
<p class="alert-info">
    @ViewBag.RemHours
</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="TrackStudies">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HoursWorked" class="control-label"></label>
                <input asp-for="HoursWorked" class="form-control" />
                <span asp-validation-for="HoursWorked" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateWorked" class="control-label"></label>
                <input asp-for="DateWorked" class="form-control" min="@Global.StartDate" />
                <span asp-validation-for="DateWorked" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModuleId" class="control-label"></label>
                <select asp-for="ModuleId" class="form-control" asp-items="ViewBag.ModuleId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Track" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">View Tracked Records</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
