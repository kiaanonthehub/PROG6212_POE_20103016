@model IEnumerable<PlannerLibrary.DbModels.TblTrackStudy>

@{
    ViewData["Title"] = "Index";
}

<h1>Tracked Records</h1>

<p>
    <a asp-action="TrackStudies">Track new record</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Module)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateWorked)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeekNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoursWorked)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Module.ModuleId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateWorked)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WeekNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoursWorked)
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.TrackStudiesId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
